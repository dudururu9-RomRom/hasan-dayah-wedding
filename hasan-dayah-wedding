// Main JavaScript File
document.addEventListener('DOMContentLoaded', function() {
    // Initialize all components
    initLoadingScreen();
    initNavigation();
    initScrollAnimations();
    initSmoothScroll();
    
    // Show loading screen for 2 seconds
    setTimeout(() => {
        document.getElementById('loadingScreen').style.opacity = '0';
        setTimeout(() => {
            document.getElementById('loadingScreen').style.display = 'none';
        }, 500);
    }, 2000);
});

// Loading Screen
function initLoadingScreen() {
    const loadingScreen = document.getElementById('loadingScreen');
    window.addEventListener('load', () => {
        setTimeout(() => {
            loadingScreen.style.opacity = '0';
            setTimeout(() => {
                loadingScreen.style.display = 'none';
            }, 500);
        }, 1000);
    });
}

// Navigation
function initNavigation() {
    const navToggle = document.getElementById('navToggle');
    const navLinks = document.getElementById('navLinks');
    
    if (navToggle && navLinks) {
        navToggle.addEventListener('click', () => {
            navLinks.classList.toggle('active');
        });
    }
    
    // Close mobile menu when clicking on a link
    document.querySelectorAll('.nav-links a').forEach(link => {
        link.addEventListener('click', () => {
            navLinks.classList.remove('active');
        });
    });
}

// Smooth Scroll
function initSmoothScroll() {
    document.querySelectorAll('a[href^="#"]').forEach(anchor => {
        anchor.addEventListener('click', function (e) {
            e.preventDefault();
            const target = document.querySelector(this.getAttribute('href'));
            if (target) {
                target.scrollIntoView({
                    behavior: 'smooth',
                    block: 'start'
                });
            }
        });
    });
}

// Scroll to Section
function scrollToSection(sectionId) {
    const section = document.getElementById(sectionId);
    if (section) {
        section.scrollIntoView({
            behavior: 'smooth',
            block: 'start'
        });
    }
}

// Scroll Animations
function initScrollAnimations() {
    const observerOptions = {
        threshold: 0.1,
        rootMargin: '0px 0px -50px 0px'
    };

    const observer = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
            if (entry.isIntersecting) {
                entry.target.classList.add('visible');
            }
        });
    }, observerOptions);

    // Observe all elements with fade-in class
    document.querySelectorAll('.fade-in').forEach(el => {
        observer.observe(el);
    });
}

// Utility Functions
function debounce(func, wait) {
    let timeout;
    return function executedFunction(...args) {
        const later = () => {
            clearTimeout(timeout);
            func(...args);
        };
        clearTimeout(timeout);
        timeout = setTimeout(later, wait);
    };
}

// Copy to Clipboard with Feedback
function copyToClipboard(text) {
    navigator.clipboard.writeText(text).then(() => {
        // Show success feedback
        const originalText = event.target.textContent;
        event.target.textContent = 'âœ… Disalin!';
        event.target.style.background = '#4CAF50';
        
        setTimeout(() => {
            event.target.textContent = originalText;
            event.target.style.background = '';
        }, 2000);
    }).catch(err => {
        console.error('Failed to copy: ', err);
        alert('Gagal menyalin teks. Silakan salin manual.');
    });
}
â”‚   â”œâ”€â”€ music-player.js
// Music Player Controller
class MusicPlayer {
    constructor() {
        this.audio = document.getElementById('backgroundMusic');
        this.toggleButton = document.getElementById('musicToggle');
        this.isPlaying = false;
        
        this.init();
    }
    
    init() {
        // Add click event to toggle button
        this.toggleButton.addEventListener('click', () => {
            this.toggle();
        });
        
        // Auto-play on user interaction (required by browser policies)
        document.addEventListener('click', this.firstInteraction.bind(this), { once: true });
        
        // Handle audio events
        this.audio.addEventListener('ended', () => {
            this.audio.currentTime = 0;
            this.audio.play();
        });
        
        this.audio.addEventListener('error', (e) => {
            console.error('Audio error:', e);
            this.toggleButton.style.display = 'none';
        });
    }
    
    firstInteraction() {
        // Try to play audio on first user interaction
        this.audio.play().then(() => {
            this.isPlaying = true;
            this.updateButton();
        }).catch(error => {
            console.log('Auto-play prevented:', error);
            this.isPlaying = false;
            this.updateButton();
        });
    }
    
    toggle() {
        if (this.isPlaying) {
            this.pause();
        } else {
            this.play();
        }
    }
    
    play() {
        this.audio.play().then(() => {
            this.isPlaying = true;
            this.updateButton();
        }).catch(error => {
            console.error('Play failed:', error);
            this.isPlaying = false;
            this.updateButton();
        });
    }
    
    pause() {
        this.audio.pause();
        this.isPlaying = false;
        this.updateButton();
    }
    
    updateButton() {
        if (this.isPlaying) {
            this.toggleButton.textContent = 'ğŸ”Š';
            this.toggleButton.title = 'Matikan Musik';
        } else {
            this.toggleButton.textContent = 'ğŸ”‡';
            this.toggleButton.title = 'Putar Musik';
        }
    }
    
    setVolume(volume) {
        this.audio.volume = Math.max(0, Math.min(1, volume));
    }
}

// Initialize music player when DOM is loaded
document.addEventListener('DOMContentLoaded', () => {
    new MusicPlayer();
});
â”‚   â”œâ”€â”€ countdown.js
// Countdown Timer
class WeddingCountdown {
    constructor() {
        this.weddingDate = new Date('December 22, 2025 08:00:00').getTime();
        this.timer = null;
        
        this.init();
    }
    
    init() {
        this.updateCountdown();
        this.startTimer();
    }
    
    startTimer() {
        this.timer = setInterval(() => {
            this.updateCountdown();
        }, 1000);
    }
    
    updateCountdown() {
        const now = new Date().getTime();
        const distance = this.weddingDate - now;
        
        if (distance < 0) {
            this.handleCountdownEnd();
            return;
        }
        
        const days = Math.floor(distance / (1000 * 60 * 60 * 24));
        const hours = Math.floor((distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
        const minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
        const seconds = Math.floor((distance % (1000 * 60)) / 1000);
        
        this.displayTime(days, hours, minutes, seconds);
    }
    
    displayTime(days, hours, minutes, seconds) {
        const elements = {
            days: document.getElementById('days'),
            hours: document.getElementById('hours'),
            minutes: document.getElementById('minutes'),
            seconds: document.getElementById('seconds')
        };
        
        if (elements.days) elements.days.textContent = this.formatTime(days);
        if (elements.hours) elements.hours.textContent = this.formatTime(hours);
        if (elements.minutes) elements.minutes.textContent = this.formatTime(minutes);
        if (elements.seconds) elements.seconds.textContent = this.formatTime(seconds);
    }
    
    formatTime(time) {
        return time < 10 ? `0${time}` : time;
    }
    
    handleCountdownEnd() {
        clearInterval(this.timer);
        
        const elements = {
            days: document.getElementById('days'),
            hours: document.getElementById('hours'),
            minutes: document.getElementById('minutes'),
            seconds: document.getElementById('seconds')
        };
        
        Object.values(elements).forEach(element => {
            if (element) element.textContent = '00';
        });
        
        // Show celebration message
        const countdownElement = document.getElementById('countdown');
        if (countdownElement) {
            const celebrationMsg = document.createElement('div');
            celebrationMsg.className = 'celebration-message';
            celebrationMsg.innerHTML = '<p>ğŸ‰ Hari Bahagia Telah Tiba! ğŸ‰</p>';
            countdownElement.appendChild(celebrationMsg);
        }
    }
    
    destroy() {
        if (this.timer) {
            clearInterval(this.timer);
        }
    }
}

// Initialize countdown when DOM is loaded
document.addEventListener('DOMContentLoaded', () => {
    new WeddingCountdown();
});
â”‚   â”œâ”€â”€ gallery.js
// Gallery Lightbox
class GalleryLightbox {
    constructor() {
        this.currentIndex = 0;
        this.images = [];
        this.lightbox = document.getElementById('lightbox');
        this.lightboxImg = document.getElementById('lightbox-img');
        
        this.init();
    }
    
    init() {
        // Get all gallery images
        this.images = Array.from(document.querySelectorAll('.gallery-item img'))
            .map(img => img.src);
        
        // Add keyboard event listeners
        document.addEventListener('keydown', this.handleKeyPress.bind(this));
        
        // Close lightbox when clicking outside image
        this.lightbox.addEventListener('click', (e) => {
            if (e.target === this.lightbox) {
                this.close();
            }
        });
    }
    
    open(index) {
        this.currentIndex = index;
        this.lightboxImg.src = this.images[this.currentIndex];
        this.lightbox.style.display = 'block';
        document.body.style.overflow = 'hidden';
        
        // Add fade-in effect
        setTimeout(() => {
            this.lightbox.style.opacity = '1';
        }, 10);
    }
    
    close() {
        this.lightbox.style.opacity = '0';
        setTimeout(() => {
            this.lightbox.style.display = 'none';
            document.body.style.overflow = 'auto';
        }, 300);
    }
    
    changeImage(direction) {
        this.currentIndex += direction;
        
        // Loop through images
        if (this.currentIndex >= this.images.length) {
            this.currentIndex = 0;
        } else if (this.currentIndex < 0) {
            this.currentIndex = this.images.length - 1;
        }
        
        this.lightboxImg.src = this.images[this.currentIndex];
        
        // Add slide effect
        this.lightboxImg.style.opacity = '0';
        setTimeout(() => {
            this.lightboxImg.style.opacity = '1';
        }, 200);
    }
    
    handleKeyPress(e) {
        if (this.lightbox.style.display === 'block') {
            switch(e.key) {
                case 'Escape':
                    this.close();
                    break;
                case 'ArrowLeft':
                    this.changeImage(-1);
                    break;
                case 'ArrowRight':
                    this.changeImage(1);
                    break;
            }
        }
    }
}

// Global functions for HTML onclick
let galleryLightbox;

function openLightbox(index) {
    if (!galleryLightbox) {
        galleryLightbox = new GalleryLightbox();
    }
    galleryLightbox.open(index);
}

function closeLightbox() {
    if (galleryLightbox) {
        galleryLightbox.close();
    }
}

function changeImage(direction) {
    if (galleryLightbox) {
        galleryLightbox.changeImage(direction);
    }
}

// Initialize gallery when DOM is loaded
document.addEventListener('DOMContentLoaded', () => {
    galleryLightbox = new GalleryLightbox();
});
â”‚   â””â”€â”€ form-handler.js
// RSVP Form Handler
class RSVPForm {
    constructor() {
        this.form = document.getElementById('rsvpForm');
        this.guestMessages = document.getElementById('guestMessages');
        
        this.init();
    }
    
    init() {
        if (this.form) {
            this.form.addEventListener('submit', this.handleSubmit.bind(this));
        }
        
        this.loadGuestMessages();
    }
    
    handleSubmit(e) {
        e.preventDefault();
        
        const formData = {
            name: document.getElementById('name').value,
            relationship: document.getElementById('relationship').value,
            attendance: document.getElementById('attendance').value,
            message: document.getElementById('message').value,
            timestamp: new Date().toLocaleString('id-ID')
        };
        
        if (this.validateForm(formData)) {
            this.saveToLocalStorage(formData);
            this.displayGuestMessage(formData);
            this.form.reset();
            this.showSuccessMessage();
        }
    }
    
    validateForm(data) {
        if (!data.name.trim()) {
            alert('Mohon isi nama lengkap');
            return false;
        }
        
        if (!data.relationship) {
            alert('Mohon pilih hubungan dengan mempelai');
            return false;
        }
        
        if (!data.attendance) {
            alert('Mohon pilih konfirmasi kehadiran');
            return false;
        }
        
        return true;
    }
    
    saveToLocalStorage(data) {
        let messages = JSON.parse(localStorage.getItem('weddingGuestMessages') || '[]');
        messages.unshift(data);
        localStorage.setItem('weddingGuestMessages', JSON.stringify(messages));
    }
    
    loadGuestMessages() {
        if (!this.guestMessages) return;
        
        const messages = JSON.parse(localStorage.getItem('weddingGuestMessages') || '[]');
        this.guestMessages.innerHTML = '';
        
        if (messages.length === 0) {
            this.guestMessages.innerHTML = '<p class="no-messages">Belum ada pesan dari tamu.</p>';
            return;
        }
        
        messages.forEach(message => {
            this.displayGuestMessage(message, false);
        });
    }
    
    displayGuestMessage(data, animate = true) {
        if (!this.guestMessages) return;
        
        const messageElement = document.createElement('div');
        messageElement.className = `guest-message ${animate ? 'fade-in' : ''}`;
        
        const attendanceIcon = data.attendance === 'hadir' ? 'âœ…' : 'âŒ';
        const attendanceText = data.attendance === 'hadir' ? 'Akan Hadir' : 'Tidak Dapat Hadir';
        
        messageElement.innerHTML = `
            <div class="guest-message-header">
                <strong>${data.name}</strong>
                <span class="attendance-badge">${attendanceIcon} ${attendanceText}</span>
            </div>
            <div class="guest-relationship">${this.getRelationshipText(data.relationship)}</div>
            ${data.message ? `<div class="guest-message-text">"${data.message}"</div>` : ''}
            <div class="guest-timestamp">${data.timestamp}</div>
        `;
        
        if (animate) {
            this.guestMessages.insertBefore(messageElement, this.guestMessages.firstChild);
        } else {
            this.guestMessages.appendChild(messageElement);
        }
    }
    
    getRelationshipText(relationship) {
        const relationships = {
            'keluarga': 'Keluarga',
            'teman': 'Teman',
            'rekan': 'Rekan Kerja',
            'lainnya': 'Tamu Undangan'
        };
        
        return relationships[relationship] || relationship;
    }
    
    showSuccessMessage() {
        const submitBtn = this.form.querySelector('.submit-btn');
        const originalText = submitBtn.textContent;
        
        submitBtn.textContent = 'âœ… Terkirim!';
        submitBtn.style.background = '#4CAF50';
        
        setTimeout(() => {
            submitBtn.textContent = originalText;
            submitBtn.style.background = '';
        }, 3000);
    }
}

// Initialize RSVP form when DOM is loaded
document.addEventListener('DOMContentLoaded', () => {
    new RSVPForm();
});
